<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.manaksh.milkdiary.fragments.ReportsFragment">

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/month_spinner"
                android:gravity="center|center_horizontal" />-->

            <Spinner
                android:id="@+id/months_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical|center"
                android:nestedScrollingEnabled="false"
                android:paddingLeft="@dimen/reports_fragment_horizonal_margin"
                android:spinnerMode="dropdown" />

        </TableRow>
    </TableLayout>

    <GridView
        android:id="@+id/tagGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@id/tagGrid"
        android:layout_below="@+id/tableLayout2"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:columnWidth="@dimen/reports_fragment_horizonal_margin"
        android:gravity="center_horizontal"
        android:longClickable="true"
        android:minWidth="@dimen/activity_horizontal_margin"
        android:nestedScrollingEnabled="false"
        android:numColumns="5"
        android:textFilterEnabled="false"
        android:transitionGroup="true"
        android:visibility="visible" />

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tagGrid"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/tr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin" />

            <ImageView
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:src="@drawable/orange" />

            <ImageView
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:src="@drawable/blue" />

            <ImageView
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:src="@drawable/yellow" />

            <ImageView
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:src="@drawable/milkman" />

        </TableRow>

        <TableRow
            android:id="@+id/tr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:src="@mipmap/check" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tr3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:src="@drawable/cross" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv8"
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout3"
        android:layout_marginTop="@dimen/reports_fragment_horizonal_margin"
        android:gravity="center"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:clickable="true"
            android:gravity="center|center_horizontal">

            <TextView
                android:id="@+id/tv9"
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:gravity="center"
                android:text="NET : "
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv10"
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv11"
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:gravity="center"
                android:text="*"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/activity_vertical_margin"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="50dp"
                android:autoLink="none"
                android:background="@color/transparent"
                android:gravity="center"
                android:hint="price"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv12"
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:gravity="center"
                android:text="="
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/activity_vertical_margin"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv13"
                android:layout_width="@dimen/reports_fragment_horizonal_margin"
                android:layout_height="@dimen/reports_fragment_vertical_margin"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

</RelativeLayout>
